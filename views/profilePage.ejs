<%- include('./includes/main.ejs') %>

    <div class="container-fluid" style="min-width: 400px; max-width:890px">

        <div class="row">
            <div class="col-lg-10">
                <h2>Update Profile</h2>
                <form action="/update-profile" method="POST" class="login-form">
                    <div>
                  <h2>Email</h2>
                    <label for="email">Provide new Email</label>
                  <input type="email" id="email" name="email" >
                </div>
                
                <div>
                    <h2>Name</h2>
                      <label for="name">Provide new Name</label>
                    <input type="name" id="name" name="name" >
                  </div>

                  <div>
                    <h2>Second Name</h2>
                      <label for="secondname">Provide new Second Name</label>
                    <input type="secondname" id="secondname" name="secondname" >
                  </div>

                  <div>
                    <h2>Username</h2>
                      <label for="username">Provide new Username</label>
                    <input type="username" id="username" name="username" >
                  </div>

                <div>
                  <h2>Password</h2>
                  <label for="oldpassword">Provide Old Password</label>
                  <input type="oldpassword" id="oldpassword" name="oldpassword" >


                  <label for="password">Provide new password</label>
                  <input type="password" id="password" name="password" >
                  <label for="password2">Retype new password</label>
                  <input type="password2" id="password2" name="password2" >
                </div>
                

                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button type="submit" class="submit-button">Update Your user</button>
                </form>
             
            </div>
        </div>
            
    
    </div>
    <%- include('./includes/mainend.ejs') %>


