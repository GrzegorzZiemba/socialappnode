<%- include('./includes/header.ejs') %>
<%- include('./includes/navbar.ejs') %>
<section class="main-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-10">
                <form action="/create-post" method="POST" enctype="multipart/form-data" class="login-form">
                    <% if (isAuth) { %>

                    <h2> Hello ! <%= user %></h2>
                    <label for="postTitle"> Post Title</label>
                    <input type="text" id="postTitle" name="postTitle" required>
                    <label for="postDescription">Post Descriptions</label>
                    <textarea type="postDescription" id="postDescription" name="postDescription" required></textarea>
                    <input type="file" name="sampleFile" />
        
                    <input type="hidden" name="author" value="<%= id %>" required>
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button type="submit" class="submit-button">Create</button>
                    <% } %>

                </form>
            </div>
        </div>

    </div>

</section>